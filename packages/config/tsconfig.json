{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.mjs"
  ],
  "exclude": [
    "types",
    "dist",
    "**/__tests__"
  ]
}