{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "isolatedDeclarations": false,
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "**/*.stories.tsx",
    "./types",
    "dist",
    "**/__tests__",
    "tamagui.config.ts"
  ],
}
