{
  "name": "@xsolla-zk-ui/monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "pnpm workspaces foreach --topological-dev run build",
    "build:storybook:react": "pnpm --filter @xsolla-zk-ui/react storybook:build -o ../../storybook-build/react",
    "build:storybook:vue": "pnpm --filter @xsolla-zk-ui/react storybook:build -o ../../storybook-build/vue",
    "build:vue": "pnpm --filter @xsolla-zk-ui/vue build",
    "generate:icons:react": "npx @svgr/cli@8.0.1 --config-file ./tools/svgr/react/svgr.config.js -- ./raw-icons",
    "generate:tokens": "node ./tools/tokens-studio/build.mjs",
    "generate:tokens:react": "pnpm generate:tokens --react",
    "hygen": "cross-env HYGEN_TMPLS=tools/hygen npx hygen",
    "hygen:react": "pnpm hygen react new --name",
    "hygen:vue": "pnpm hygen vue new --name",
    "icons:react": "pnpm generate:icons:react && eslint ./packages/react/src/components/svg-icons --fix",
    "lint:react": "pnpm --filter @xsolla-zk-ui/react lint",
    "lint:vue": "pnpm --filter @xsolla-zk-ui/vue lint",
    "preinstall": "npx only-allow pnpm",
    "prepare": "git submodule update --init && git config --local core.hooksPath .githooks",
    "publish": "pnpm workspaces foreach --topological-dev run publish",
    "release": "pnpm build && pnpm publish",
    "storybook:react": "pnpm --filter @xsolla-zk-ui/react storybook",
    "update-design-tokens": "git submodule update --remote --merge"
  },
  "devDependencies": {
    "@eslint/js": "9.16.0",
    "@tokens-studio/sd-transforms": "^1.2.9",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@typescript-eslint/eslint-plugin": "8.18.0",
    "@typescript-eslint/parser": "8.18.0",
    "cross-env": "^7.0.3",
    "eslint": "9.16.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.7.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fs-extra": "^11.2.0",
    "globals": "^15.12.0",
    "prettier": "^3.4.2",
    "storybook": "^8.4.7",
    "style-dictionary": "^4.0.0",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.0",
    "vite": "^6.0.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "pnpm": "9.15.0",
    "node": ">=20.9.0"
  }
}
