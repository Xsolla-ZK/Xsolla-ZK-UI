{
  "name": "@xsolla-zk/monorepo",
  "version": "1.0.1",
  "private": true,
  "author": {
    "email": "knuckleswolf@gmail.com",
    "name": "Yaroslav Volov",
    "url": "https://github.com/knuckleswolf"
  },
  "scripts": {
    "publish:all": "pnpm -r --workspace-concurrency=1 --filter='@xsolla-zk/icons' --filter='@xsolla-zk/react' --filter='@xsolla-zk/tokens' --filter='@xsolla-zk/icons-generator' --filter='@xsolla-zk/config' run publish --no-git-checks",
    "publish:tokens": "pnpm --filter @xsolla-zk/tokens publish --no-git-checks",
    "publish:react": "pnpm --filter @xsolla-zk/react publish --no-git-checks",
    "build": "pnpm --filter='@xsolla-zk/config' --filter='@xsolla-zk/icons' --filter='@xsolla-zk/react' run build",
    "build:publish": "pnpm generate:all && pnpm build",
    "build:storybook:react": "pnpm --filter @xsolla-zk/react storybook:build -o ../../storybook-build/react",
    "build:docs": "pnpm --filter @xsolla-zk/docs build",
    "start:docs": "pnpm --filter @xsolla-zk/docs start",
    "build:react": "pnpm --filter @xsolla-zk/react build",
    "generate:all": "pnpm generate:tokens && pnpm generate:config && pnpm generate:icons",
    "generate:config": "pnpm --filter @xsolla-zk/config generate",
    "generate:icons": "pnpm --filter @xsolla-zk/icons generate",
    "generate:tokens": "node ./scripts/root-exec.mjs tokens generate",
    "lint": "pnpm -r --workspace-concurrency=1 --filter='@xsolla-zk/icons' --filter='@xsolla-zk/react' run lint",
    "lint:react": "pnpm --filter @xsolla-zk/react lint",
    "version:patch": "pnpm -r --workspace-concurrency=1 --filter='@xsolla-zk/icons' --filter='@xsolla-zk/react' --filter='@xsolla-zk/tokens' --filter='@xsolla-zk/icons-generator' --filter='@xsolla-zk/config' exec pnpm version patch --no-git-tag-version",
    "version:minor": "pnpm -r --workspace-concurrency=1 --filter='@xsolla-zk/icons' --filter='@xsolla-zk/react' --filter='@xsolla-zk/tokens' --filter='@xsolla-zk/icons-generator' --filter='@xsolla-zk/config' exec pnpm version minor --no-git-tag-version",
    "version:major": "pnpm -r --workspace-concurrency=1 --filter='@xsolla-zk/icons' --filter='@xsolla-zk/react' --filter='@xsolla-zk/tokens' --filter='@xsolla-zk/icons-generator' --filter='@xsolla-zk/config' exec pnpm version major --no-git-tag-version",
    "preinstall": "npx only-allow pnpm",
    "publish": "pnpm -r --workspace-concurrency=1 run publish",
    "release": "pnpm build && pnpm publish",
    "storybook:react": "pnpm --filter @xsolla-zk/react storybook"
  },
  "devDependencies": {
    "@eslint/js": "catalog:eslint9",
    "@types/node": "catalog:",
    "@types/react": "catalog:react19",
    "@typescript-eslint/eslint-plugin": "catalog:typescript-eslint",
    "@typescript-eslint/parser": "catalog:typescript-eslint",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "catalog:eslint9",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.3.4",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "fs-extra": "^11.2.0",
    "globals": "catalog:",
    "prettier": "catalog:",
    "storybook": "catalog:storybook",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:typescript-eslint",
    "vite": "catalog:",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "pnpm": {
    "overrides": {
      "react": "catalog:react19",
      "react-dom": "catalog:react19",
      "@types/react": "catalog:react19",
      "@types/react-dom": "catalog:react19"
    }
  },
  "packageManager": "pnpm@10.3.0",
  "engines": {
    "pnpm": "10.3.0",
    "node": ">=20.9.0"
  }
}
