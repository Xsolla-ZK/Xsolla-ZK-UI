{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@xsolla-zk-ui/react": ["./packages/react/src"],
      "@xsolla-zk-ui/react/*": ["./packages/react/src/*"],
      "@xsolla-zk-ui/vue": ["./packages/vue/src"],
      "@xsolla-zk-ui/vue/*": ["./packages/vue/src/*"],
    },
  },
  "exclude": ["**/.*", "**/build", "**/node_modules"],
}
