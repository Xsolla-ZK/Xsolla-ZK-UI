{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@xsolla-zk/react": ["./packages/react/src"],
      "@xsolla-zk/react/*": ["./packages/react/src/*"],
      "@xsolla-zk/vue": ["./packages/vue/src"],
      "@xsolla-zk/vue/*": ["./packages/vue/src/*"],
      "@xsolla-zk/icons": ["./packages/icons/src"],
      "@xsolla-zk/icons/*": ["./packages/icons/src/*"],
    }
  },
  "exclude": ["build", "dist", "node_modules", "**/__tests__/**", "**/.*", "**/*.test.ts", "**/*.spec.ts"]
}
